extends layout

block content
    h1 Team #{team_number} #{name}
    p
        a(href="https://www.thebluealliance.com/team/" + team_number style="padding-right: 5px")
            img(src="https://www.thebluealliance.com/images/logo_square_512.png" height="25px" width="25px" style="border-radius: 25px;")
        if website !== 'http://www.firstinspires.org/'
            a(href=website style="padding-right: 5px") Team Website
        | Located in #{location}
    .col-lg-6
        each event in events.sort((a, b) => a.start_date - b.start_date)
            p
                span.badge #{event.start_date.getMonth()}/#{event.start_date.getDate()}
                a(href="/event/" + event.key style="padding-left: 8px") (Event)
                a(href="/team/" + team_number + "/" + event.key style="padding-left: 4px")= event.name
    if typeof(image_url) !== 'undefined'
        .col-lg-6
            .well.well-sm
                a(href=image_url)
                    img(src=image_url width="100%" height="30%" style="border-radius: 5px")
